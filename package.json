{
  "name": "vk-nft-contract",
  "version": "0.1.0",
  "scripts": {
    "compile": "hardhat compile",
    "recompile": "hardhat compile --force",
    "deploy": "hardhat deploy --export-all contracts.json",
    "redeploy": "hardhat deploy --export-all contracts.json --reset",
    "testf": "hardhat test --deploy-fixture",
    "test": "hardhat test --network hardhat",
    "coverage": "hardhat coverage --network hardhat",
    "verify": "hardhat etherscan-verify",
    "clean": "hardhat clean",
    "export": "hardhat export --export-all contracts.json",
    "accounts": "hardhat accounts",
    "secrets": "hardhat secrets",
    "export:local": "hardhat export --export contracts.json --network localhost && chmod +x ./shell/format-local-deploys.sh && ./shell/format-local-deploys.sh",
    "node:local": "chmod +x ./shell/clear-local-deploys.sh && ./shell/clear-local-deploys.sh && hardhat node --no-reset",
    "test:cicd": "chmod +x ./gotbit-tools/scripts/cicd/hardhat-test.sh && ./gotbit-tools/scripts/cicd/hardhat-test.sh"
  },
  "engines": {
    "node": "16"
  },
  "devDependencies": {
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.2",
    "@tenderly/hardhat-tenderly": "^1.1.5",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.11",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "chai": "^4.3.6",
    "chai-ethers": "^0.0.1",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}
